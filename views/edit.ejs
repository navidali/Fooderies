<%- include("partials/header") %>

<div class="container" style="margin-top: 20px;">
	<h1 class="display-4" style="margin-bottom: 10px;">Edit <%= place.name %></h1>
	<form class="ui form" action="/places/<%= place._id %>?_method=PUT" method="POST">
	  <div class="field">
		<label>Name</label>
		<input type="text" name="name" value="<%=place.name%>" required>
	  </div>
	  <div class="field">
		<label>Image Url</label>
		<input tpype="text" name="image" value="<%= place.image %>" required>
	  </div>
	  <div class="field">
		<label>Description</label>
		<input type="text" name="description" value="<%= place.description %>" required>
	  </div>
	  <div class="field">
		<div class="ui checkbox">
			<input type="checkbox" tabindex="0" required>
			<label>This will confirm the following changes</label>
		 </div>
	  </div>
	  <a href="/places" class="ui button">Back</a>
	  <button class="ui button" type="submit">Submit</button>
	</form>
</div>

<%- include("partials/footer") %>